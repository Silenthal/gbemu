<Window x:Class="GBEmu.MonitorForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GBEmu"
        mc:Ignorable="d"
        Title="MonitorWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Content="CPU" Grid.Row="0" Grid.Column="0"/>
        <ProgressBar Name="mainBar"  Grid.Row="0" Grid.Column="1"/>
        <Label Name="mainBarLabel" Content="Main" Grid.Row="0" Grid.Column="2"/>
        <Label Content="Blit" Grid.Row="1" Grid.Column="0"/>
        <ProgressBar Name="blitBar"  Grid.Row="1" Grid.Column="1"/>
        <Label Name="blitBarLabel" Content="Blit" Grid.Row="1" Grid.Column="2"/>
    </Grid>
</Window>
