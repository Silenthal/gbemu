<Window x:Class="GBEmu.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GBEmu"
        mc:Ignorable="d"
        Title="LogWindow" Height="300" Width="300">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0" Name="logBox" FontFamily="Consolas"/>
        <DockPanel Grid.Row="1" LastChildFill="False">
            <Button Content="Clear" DockPanel.Dock="Left" Click="clearMsgButton_Click"/>
            <Button Content="Close" DockPanel.Dock="Right" Click="closeButton_Click"/>
        </DockPanel>
    </Grid>
</Window>
